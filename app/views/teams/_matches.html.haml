- if matches.count > 0
  %h4= title
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
    %thead
      %tr{:style => "background: #336600; color: #fff;"}
        %td
          %strong #
        %td
          .name{:title => 'Home Team'}
            %strong Home
        %td
          .name{:title => 'Away Team'}
            %strong Away
        %td
          .name{:title => 'Half Time Result'}
            %strong Half-Time
        %td
          .name{:title => 'Full Time Result'}
            %strong Full-Time
        %td
          .name{:title => 'Info'}
            %strong Info
        %td
          .name{:title => 'Played at'}
            %strong Date
    %tbody
      = render :partial => 'shared/match', :collection => matches
  =will_paginate matches.paginate(:page => params[:page])  
